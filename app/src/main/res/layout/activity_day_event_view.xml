<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.operatoroverloading.persiancalendar.DayEventView"
    android:background="#212121">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="70dp"
        android:background="@color/colorAccent"
        android:id="@+id/dateTextView"
        android:layout_marginBottom="10dp"
        android:layoutDirection="rtl"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtViewEvent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:shadowColor="#fff"
            android:text="رویداد های تاریخ "
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/day_day_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#fff"
            android:text="DAY"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#fff"
            android:text="/"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/day_month_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#fff"
            android:text="MONTH"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#fff"
            android:text="/"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/day_year_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowColor="#fff"
            android:text="year"
            android:textColor="#fff"
            android:textSize="25sp" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dateTextView"
        android:id="@+id/rc_event_view"
        >

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
